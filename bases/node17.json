{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 17",
  "_version": "17.1.0",
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node16"
  }
}
